patch-module org.apache.sis.metadata {
    // We only need to add the modules not already added by `org.apache.sis.util`.
    add-modules org.apache.derby.tools,
                org.hsqldb;

    add-reads org.junit.jupiter.api,
              org.opengis.geoapi.conformance,
              org.apache.derby.tools,
              org.hsqldb;

    add-exports org.apache.sis.test.mock
             to org.apache.sis.referencing;

    add-exports org.apache.sis.xml.test
             to org.apache.sis.referencing,
                org.apache.sis.storage.xml,
                org.apache.sis.profile.france;

    add-exports org.apache.sis.xml.bind.gcx
             to org.apache.sis.referencing;

    add-exports org.apache.sis.metadata.xml
             to org.apache.sis.storage;

    add-exports org.apache.sis.xml.internal.shared
             to org.apache.sis.storage.geotiff;

    add-exports org.apache.sis.metadata.sql.internal.shared
             to org.apache.sis.referencing.epsg;

    add-exports org.apache.sis.metadata.internal.shared
             to org.apache.sis.referencing.gazetteer;
}
